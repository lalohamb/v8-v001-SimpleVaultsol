{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,

    "rootDir": "src",
    "outDir": "dist",

    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "sourceMap": true
  },
  "include": ["src"]
}
